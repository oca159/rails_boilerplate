<div class="page-header">
  <%%= link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New <%= human_name %>
  <%% end %>
  <h1>Listing <%= plural_table_name %></h1>
</div>

<table class="table table-striped table-bordered table-hover datatable">
  <thead>
    <tr>
  <% attributes.each do |attribute| -%>
      <th class="text-center"><%= attribute.human_name %></th>
  <% end -%>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
      <% attributes.each do |attribute| -%>
        <td class="text-center"><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
      <% end -%>
      <td class="text-center">
        <%%= link_to <%= singular_table_name %>, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        <%% end %>
        <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <%% end %>
        <%%= link_to <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <%% end %>
      </td>
    <%% end %>
  </tbody>
</table>